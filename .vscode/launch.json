{
    "version": "0.2.0",
    "configurations": [
    
      {
        "name": "Inventory API (.NET 8)",
        "type": "dotnet",
        "request": "launch",
        "projectPath": "${workspaceFolder}/src/InventoryService.Api/InventoryService.Api.csproj"
      },
      {
        "name": "Order API (.NET 8)",
        "type": "dotnet",
        "request": "launch",
        "projectPath": "${workspaceFolder}/src/OrderService.Api/OrderService.Api.csproj"
      },
      {
        "name": "WebApp (.NET 8)",
        "type": "dotnet",
        "request": "launch",
        "projectPath": "${workspaceFolder}/src/OrderWeb.Mvc/OrderWeb.Mvc.csproj"
      },
      {
        "name": "Debug Playwright Tests (E2E.Tests)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build-e2e-tests",
        "program": "dotnet",
        "args": [
          "test",
          "${workspaceFolder}/tests/E2E.Tests/E2E.Tests.csproj",
          "--no-build",
          "--filter",
          "${input:testFilter}"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "HEADED": "1",
          "PWDEBUG": "1"
        },
        "console": "integratedTerminal",
        "stopAtEntry": false
      },
      {
        "name": "Debug Firefox Extension Tests",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build-firefox-tests",
        "program": "dotnet",
        "args": [
          "test",
          "${workspaceFolder}/tests/Firefox.Extension.Tests/Firefox.Extension.Tests.csproj",
          "--no-build",
          "--filter",
          "${input:testFilter}"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "PWDEBUG": "1"
        },
        "console": "integratedTerminal",
        "stopAtEntry": false
      },
      {
        "name": "Debug Playwright (Headed Mode)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build-e2e-tests",
        "program": "dotnet",
        "args": [
          "test",
          "${workspaceFolder}/tests/E2E.Tests/E2E.Tests.csproj",
          "--no-build"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "HEADED": "1"
        },
        "console": "integratedTerminal"
      },
      {
        "name": "Debug Current Playwright Test File",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build-e2e-tests",
        "program": "dotnet",
        "args": [
          "test",
          "${workspaceFolder}/tests/E2E.Tests/E2E.Tests.csproj",
          "--no-build",
          "--filter",
          "FullyQualifiedName~${fileBasenameNoExtension}"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "HEADED": "1",
          "PWDEBUG": "1"
        },
        "console": "integratedTerminal"
      },
      {
        "name": "Pact: OrderService Consumer Tests",
        "type": "coreclr",
        "request": "launch",
        "program": "dotnet",
        "args": [
          "test",
          "${workspaceFolder}/tests/OrderService.Contract.Tests/OrderService.Contract.Tests.csproj",
          "--filter",
          "OrderClientTests"
        ],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "stopAtEntry": false
      },
      {
        "name": "Pact: OrderService Provider Tests",
        "type": "coreclr",
        "request": "launch",
        "program": "dotnet",
        "args": [
          "test",
          "${workspaceFolder}/tests/OrderService.Contract.Tests/OrderService.Contract.Tests.csproj",
          "--filter",
          "OrderApiProviderTests"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "PACT_BROKER_BASE_URL": "http://localhost:9292",
          "PACT_BROKER_USERNAME": "admin",
          "PACT_BROKER_PASSWORD": "admin",
          "PROVIDER_VERSION": "1.0.0",
          "PUBLISH_VERIFICATION_RESULTS": "true"
        },
        "console": "integratedTerminal",
        "stopAtEntry": false
      },
      {
        "name": "Pact: InventoryService Consumer Tests",
        "type": "coreclr",
        "request": "launch",
        "program": "dotnet",
        "args": [
          "test",
          "${workspaceFolder}/tests/InventoryService.Contract.Tests/InventoryService.Contract.Tests.csproj",
          "--filter",
          "InventoryClientTests"
        ],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "stopAtEntry": false
      },
      {
        "name": "Pact: All Contract Tests",
        "type": "coreclr",
        "request": "launch",
        "program": "dotnet",
        "args": [
          "test",
          "${workspaceFolder}/E2Etesting.slnx",
          "--filter",
          "FullyQualifiedName~Contract.Tests"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "PACT_BROKER_BASE_URL": "http://localhost:9292",
          "PACT_BROKER_USERNAME": "admin",
          "PACT_BROKER_PASSWORD": "admin",
          "PROVIDER_VERSION": "1.0.0",
          "PUBLISH_VERIFICATION_RESULTS": "true"
        },
        "console": "integratedTerminal",
        "stopAtEntry": false
      }
    ],
    "compounds": [
      {
        "name": "Launch All (.NET 8)",
        "configurations": [
          "Inventory API (.NET 8)",
          "Order API (.NET 8)",
          "WebApp (.NET 8)"
        ],
        "stopAll": true
      },
      {
        "name": "Pact: Run Consumer Tests (Generate Pacts)",
        "configurations": [
          "Pact: OrderService Consumer Tests",
          "Pact: InventoryService Consumer Tests"
        ],
        "stopAll": false
      }
    ],
    "inputs": [
      {
        "id": "testFilter",
        "type": "promptString",
        "description": "Test filter (e.g., 'TestMethodName' or 'FullyQualifiedName~ClassName')",
        "default": ""
      }
    ]
  }
  